generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  DOCTOR
  RECEPTIONIST
  PATIENT
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(PATIENT)
  createdAt DateTime @default(now())

  patient   Patient?
  doctor    Doctor?
  receptionist Receptionist?
}

model Patient {
  id        Int        @id @default(autoincrement())
  userId    Int        @unique
  age       Int
  gender    String
  address   String?
  phone     String?
  user      User       @relation(fields: [userId], references: [id])
  appointments Appointment[]
  records   MedicalRecord[]
}

model Doctor {
  id             Int          @id @default(autoincrement())
  userId         Int          @unique
  specialization String
  experience     Int
  phone          String?
  user           User         @relation(fields: [userId], references: [id])
  appointments   Appointment[]
}

model Receptionist {
  id        Int     @id @default(autoincrement())
  userId    Int     @unique
  phone     String?
  user      User    @relation(fields: [userId], references: [id])
}

model Appointment {
  id          Int       @id @default(autoincrement())
  patientId   Int
  doctorId    Int
  date        DateTime
  status      String     @default("Scheduled")

  patient     Patient    @relation(fields: [patientId], references: [id])
  doctor      Doctor     @relation(fields: [doctorId], references: [id])
}

model MedicalRecord {
  id           Int       @id @default(autoincrement())
  patientId    Int
  diagnosis    String
  prescription String?
  date         DateTime  @default(now())

  patient      Patient   @relation(fields: [patientId], references: [id])
}
